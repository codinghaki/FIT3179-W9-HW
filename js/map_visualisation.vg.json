{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "background": "#DEF3F6",
    "width": 625,
    "height": 450,
    "title": "Top 20 Australian Airports by Passenger Movements (Jun 2023-Jun 2025)",
    "projection": {
        "type": "conicEqualArea",
        "parallels": [-37.9875337, -16.1259931],
        "rotate": [-133.1542969, 0, 0],
        "center": [0, -27.0567634],
        "scale": 700,
        "translate": [250, 225],
        "precision": 0.1
    },
    "config": {
        "view": { "stroke": "#e5e7eb" },
        "title": { "anchor": "start" }
    },
    "layer": [
        {
            "data": {
                "url": "../data/basemap.json",
                "format": { "type": "topojson", "feature": "STE_2016_AUST" }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#FEFBEA",
                "stroke": "#c7c7c7"
            }
        },
        {
            "data": {
                "url": "../data/basemap.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_10"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "#d9d9d9",
                "strokeWidth": 0.8
            }
        },
        {
            "data": { "url": "../data/aus_cities.csv" },
            "mark": {
                "type": "text",
                "fontSize": 7,
                "fill": "#555"
            },
            "encoding": {
                "longitude": { "field": "long", "type": "quantitative" },
                "latitude": { "field": "lat", "type": "quantitative" },
                "text": { "field": "city", "type": "nominal" }
            }
        },
        {
            "data": { "url": "../data/airports_relevant_and_aggregate.csv" },
            "mark": {
                "type": "circle",
                "opacity": 0.3,
                "stroke": "white",
                "strokeWidth": 0.6,
                "tooltip": true
            },
            "encoding": {
                "longitude": {
                    "field": "longitude_deg",
                    "type": "quantitative"
                },
                "latitude": { "field": "latitude_deg", "type": "quantitative" },
                "size": {
                    "field": "pax_24mo",
                    "type": "quantitative",
                    "title": "Passengers (24 months)",
                    "scale": {
                        "range": [180, 1400],
                        "domain": [1000000, 74000000],
                        "clamp": true
                    },
                    "legend": {
                        "title": "Passengers (24 Months)",
                        "values": [20000000, 40000000, 60000000],
                        "format": "~s",
                        "orient": "none",
                        "legendX": 500,
                        "legendY": 20,
                        "symbolFillColor": "#00008B",
                        "symbolStrokeColor": "white",
                        "symbolStrokeWidth": 0.6,
                        "direction": "vertical"
                    }
                },
                "color": {
                    "value": "#00008B"
                },
                "tooltip": [
                    { "field": "name", "title": "Airport" },
                    { "field": "iata_code", "title": "IATA" },
                    {
                        "field": "pax_24mo",
                        "title": "Passengers in the past 24 months",
                        "format": ","
                    }
                ]
            }
        }
    ]
}
